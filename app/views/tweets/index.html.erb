<div class="contents__row">
  <div class="container">
    <% @tweets.each do |tweet| %>
      <div class="content_post" style="background-image: url(<%= tweet.image %>);">

 <% if tweet.comments.present? %>
    <span class="rating-star">
      <div class="star-ratings-sprite"><span style="width:<%= tweet.comments.average(:rate).round %>0%" class="star-ratings-sprite-rating"></span></div>
    </span>
  <% else %>
    <span class="rating-star">
      <i class="star-actived rate-0"></i>
    </span>
  <% end %>


        <ul class="more_list">
          <li>
            <%= link_to '詳細', "/tweets/#{tweet.id}", method: :get %>
          </li>
            <% if user_signed_in? && current_user.id == tweet.user_id %>
          <li>
            <%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get %>
          </li>
          <li>
            <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
          </li>
            <% end %>
        </ul>

        <%= simple_format(tweet.text) %>
        <span class="name">投稿者：<%= tweet.user.nickname %></span>
      </div>
    <% end %>
   <%= paginate(@tweets) %>
  </div>
</div>